<section class="create_review_section">
  <div class="create_review_section_details">
    <h2 class="title-background">Create review</h2>

    <div>
      <h3>Post your review on this website!</h3>
      <form class="form create-form">
        <div class="form-create-form-details">
        <div class="form-group">
          <label class="country-label">Choose a country:</label>
          <select id="input-country">
            {{#each countries as |country|}}
            {{> dashboard-countries}}
            {{/each}}
          </select><br>
        </div>
        <div class="form-group">
          <label class="country-label">Rating: 5 to 1</label>
          <select id="input-rating">
            <option value=5>5 - ★★★★★</option>
            <option value=4>4 - ★★★★☆</option>
            <option value=3>3 - ★★★☆☆</option>
            <option value=2>2 - ★★☆☆☆</option>
            <option value=1>1 - ★☆☆☆☆</option>
          </select><br>
        </div>
        <div class="form-group">
          <label class="country-label">Review</label><br>
          <textarea id="input-review" name="" rows="2" cols="50"></textarea><br>
        </div>
        <div class="form-group">
          <button class="btn-submit" type="submit">Submit</button>
        </div>
        </div>
      </form>
    </div>
    
  </div>
</section>
<script src="../../js/create-review.js"></script>