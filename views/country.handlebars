<div
  class="country-container"
  style="background-image: url('{{country.photo}}');"
>

  <div class="country-name">
    <h1>{{country.name}}</h1>
  </div>

  <div class="reviews-container">
    <h2>Reviews about {{country.name}}</h2>
    {{#each reviews}}
      <div class="review">
        <p>{{this.content}}</p>
        <p>Rating: {{this.rating}}</p>
        <p>Review by: {{this.user.username}}</p>
      </div>
    {{/each}}
  </div>

</div>