
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Review</h3></div>
        <div class="card-body">
          <h3 class="card-body-h3">Post your review on this website!</h3>
          <form class="signup-form">
            <div class="form-group">
              <label for="username-signup" class="small mb-1 country-label">Choose a country:</label>
               <select id="input-country">
            {{#each countries as |country|}}
            {{> dashboard-countries}}
            {{/each}}
          </select><br>
        </div>
                <div class="form-group">
          <label class="country-label">Rating: 5 to 1</label>
          <select id="input-rating">
            <option value=5>5 - ★★★★★</option>
            <option value=4>4 - ★★★★☆</option>
            <option value=3>3 - ★★★☆☆</option>
            <option value=2>2 - ★★☆☆☆</option>
            <option value=1>1 - ★☆☆☆☆</option>
          </select><br>
        </div>
            </div>
            <div class="form-group">
              <label for="password-signup" class="small mb-1 country-label">Review</label>
              <input class="form-control py-4" type="password" id="Review-signup" placeholder="Enter a Review" />
            </div>
            <div class="form-group mt-4 mb-0">
              <button class="btn btn-primary btn-block" type="submit">Signup</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<script src="./js/signup.js"></script>