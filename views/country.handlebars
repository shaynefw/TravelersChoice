
<style>
  .country-container {
    position: relative;
    background-image: url('{{country.photo}}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  .review-container {
  margin: 20px;
  border: 2px solid red;
  background-color: var(--light);
  color: blue;
  position: relative;
}
</style>

<div
  class="country-container"
>

  <div class="country-name">
    <h1>{{country.name}}</h1>
  </div>

  <div class="reviews-container">
    <h2>Reviews about {{country.name}}</h2>
    {{#each reviews}}
      <div class="review">
        <p>{{this.content}}</p>
        <p>Rating: {{this.rating}}</p>
        <p>Review by: {{this.user.username}}</p>
      </div>
    {{/each}}
  </div>

</div>