<section class="edit_review_section">
  <div>
    <h2>Update / Delete review</h2>

    <div>
      <h3>This is your original review!</h3>
      <h4>Country: {{review.country.name}}</h4>
      <h4>Rating: {{review.rating}}{{rating_stars review.rating}}</h4>
      <p>Review:</p>
      <p>{{review.content}}</p>
      <br>  
    </div>
  
    <div id="delete-section" class="delete-section">
      <h3>🗑️ Would you like to delete this review?</h3>
      <form class="form delete-form">
        <div>
          <button class="btn-submit" type="submit">Delete</button>
        </div>
      </form>
    </div>

    <div>
      <h3>🖊️ Would you like to update this review?</h3>
      <form class="form update-form">
        <div class="form-group">
          <label>Choose a country:</label>
          <select id="input-country">
            {{#each countries as |country|}}
            {{> dashboard-countries}}
            {{/each}}
          </select><br>
        </div>
        <div class="form-group">
          <label>Rating: 5 to 1</label>
          <select id="input-rating">
            <option value=5>5 - ★★★★★</option>
            <option value=4>4 - ★★★★☆</option>
            <option value=3>3 - ★★★☆☆</option>
            <option value=2>2 - ★★☆☆☆</option>
            <option value=1>1 - ★☆☆☆☆</option>
          </select><br>
        </div>
        <div class="form-group">
          <label>Review</label><br>
          <textarea id="input-review" name="" rows="2" cols="50"></textarea><br>
        </div>
        <div class="form-group">
          <button class="btn-submit" type="submit">Save</button>
        </div>
      </form>
    </div>
    
  </div>
</section>
<script src="../../js/review.js"></script>