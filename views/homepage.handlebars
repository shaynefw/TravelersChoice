{{!--This is for "/" (homepage) --}}
<div class="container text-center">
  <div class="row ">
  <h1 class="border border-primary rounded-top p-3 bg-light">Top 3 Rating Destinations</h1> 

  {{!-- container 1 --}}
  <div class="col-md-4 align-self-start h-100">

    <div class="country-link">
      <h2>No.1 Destination: {{countryTop1.country.name}}</h2>
      <a href="/country/{{statTop1.country_id}}"></a>
    </div>

    <div class="description-box" style="height: 250px; overflow-y: auto;">
      <p>{{countryTop1.country.description}}</p><br>
    </div>

    <div class="country-link">
      <img src="{{countryTop1.country.photo}}"class="img-fluid">
      <a href="/country/{{statTop1.country_id}}"></a>
    </div>

    <div>
      <h3>Users rating: {{statTop1.rating}}</h3>
      <h3>{{rating_stars statTop1.rating}}</h3>
      {{#each reviewsTop1 as |top1|}}
      {{> homepage-reviews}}
      {{/each}}
    </div>
  </div>

